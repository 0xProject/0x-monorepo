{
    "name": "@0xproject/sol-resolver",
    "version": "1.0.0",
    "engines": {
        "node": ">=6.12"
    },
    "description": "Import resolver for smart contracts dependencies",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "watch_without_deps": "tsc -w",
        "build": "tsc && copyfiles -u 2 './lib/monorepo_scripts/**/*' ./scripts",
        "clean": "shx rm -rf lib scripts",
        "lint": "tslint --project .",
        "manual:postpublish": "yarn build; node ./scripts/postpublish.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/0xProject/0x-monorepo.git"
    },
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/0xProject/0x-monorepo/issues"
    },
    "homepage": "https://github.com/0xProject/0x-monorepo/packages/resolver/README.md",
    "devDependencies": {
        "@0xproject/monorepo-scripts": "^1.0.0",
        "@0xproject/tslint-config": "^1.0.0",
        "copyfiles": "^1.2.0",
        "make-promises-safe": "^1.1.0",
        "shx": "^0.2.2",
        "tslint": "5.11.0",
        "typescript": "2.7.1"
    },
    "dependencies": {
        "@0xproject/types": "^1.0.0-rc.1",
        "@0xproject/typescript-typings": "^1.0.0",
        "lodash": "^4.17.4"
    },
    "publishConfig": {
        "access": "public"
    }
