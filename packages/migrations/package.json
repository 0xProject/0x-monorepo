{
    "name": "@0x/migrations",
    "version": "2.0.4",
    "engines": {
        "node": ">=6.12"
    },
    "description": "0x smart contract migrations",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "build": "tsc -b",
        "build:ci": "yarn build",
        "clean": "shx rm -rf lib",
        "lint": "tslint --format stylish --project .",
