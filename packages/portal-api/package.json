{
    "private": true,
    "name": "@0xproject/portal-api",
    "version": "0.0.1",
    "description": "HTTP service that serves data for the Portal app",
    "scripts": {
        "build:watch": "tsc -w",
        "build": "node ../../node_modules/gulp/bin/gulp.js build",
        "dev": "dotenv -e .env node ../../node_modules/gulp/bin/gulp.js run",
