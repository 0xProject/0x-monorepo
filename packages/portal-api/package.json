        "pg": "^7.4.1",
        "rollbar": "^0.6.5",
        "sequelize": "^4.37.6"
    },
    "devDependencies": {
        "@0xproject/tslint-config": "^0.4.14",
        "@types/body-parser": "^1.16.1",
        "@types/express": "^4.0.35",
        "@types/lodash": "4.14.104",
        "@types/sequelize": "^4.27.14",
        "awesome-typescript-loader": "^3.1.3",
        "dotenv-cli": "^1.4.0",
        "gulp": "^3.9.1",
        "nodemon": "^1.11.0",
        "shx": "^0.2.2",
        "source-map-loader": "^0.1.6",
        "tslint": "5.8.0",
