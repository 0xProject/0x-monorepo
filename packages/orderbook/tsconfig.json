{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "outDir": "lib",
        "strict": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "declaration": true,
        "typeRoots": ["./node_modules/@0x/typescript-typings/types", "./node_modules/@types"],
        "noUnusedParameters": true
    },
    "include": ["src", "test"]
}
