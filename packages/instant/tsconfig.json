{
    "extends": "../../tsconfig",
    "compilerOptions": {
        "outDir": "lib",
        "rootDir": ".",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": ["es2015", "dom"],
        "target": "es5",
        "sourceMap": true
    },
    "include": ["./src/**/*", "./test/**/*"],
    "exclude": ["./src/index.umd.ts"]
}
