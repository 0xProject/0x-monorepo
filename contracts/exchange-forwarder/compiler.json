{
    "artifactsDir": "./generated-artifacts",
    "contractsDir": "./contracts",
    "useDockerisedSolc": true,
    "isOfflineMode": false,
    "compilerSettings": {
        "evmVersion": "byzantium",
        "optimizer": { "enabled": true, "runs": 1000000 },
        "outputSelection": {
