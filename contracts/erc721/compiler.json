{
    "artifactsDir": "./generated-artifacts",
    "contractsDir": "./contracts",
    "useDockerisedSolc": true,
    "compilerSettings": {
        "optimizer": {
            "enabled": true,
            "runs": 1000000
        },
        "outputSelection": {
            "*": {
                "*": [
                    "abi",
                    "evm.bytecode.object",
                    "evm.bytecode.sourceMap",
                    "evm.deployedBytecode.object",
                    "evm.deployedBytecode.sourceMap"
                ]
            }
        }
    },
    "contracts": [
        "DummyERC721Receiver",
        "InvalidERC721Receiver",
        "DummyERC721Token",
        "ERC721Token",
        "IERC721Receiver",
        "IERC721Token",
        "MintableERC721Token"
    ]
}
